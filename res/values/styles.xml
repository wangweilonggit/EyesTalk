<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- Basic layoout Styles -->
    <style name="hmatch_vmatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="hmatch_vwrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="hwrap_vwrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="hwrap_vmatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Divider -->
    <style name="basic_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="white_divider_style" parent="@style/basic_divider_style">
        <item name="android:background">@color/white</item>
    </style>

    <style name="sidemenu_divider_style" parent="@style/basic_divider_style">
        <item name="android:background">@color/side_menu_divider</item>
    </style>

    <!-- App Buttons -->
    <style name="our_collection_tab_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="choose_lens_tab_button_landscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="choose_lens_tab_button_portrait">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="basic_button_style" parent="@style/hwrap_vwrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Pink_Small_Button" parent="@style/basic_button_style">
        <item name="android:background">@drawable/skin_select_button_selector</item>
    </style>

    <style name="Pink_Normal_Button" parent="@style/basic_button_style">
        <item name="android:background">@drawable/choose_lens_button_selector</item>
        <item name="android:textSize">@dimen/text_size_pre_big</item>
    </style>

    <!-- Transparent dialog -->
    <style name="TransparentProgressDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Product Detail Image Style -->
    <style name="ProductDetailImageStyle">
        <item name="android:layout_width">@dimen/product_detail_image_size</item>
        <item name="android:layout_height">@dimen/product_detail_image_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>