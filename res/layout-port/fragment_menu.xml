<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_fragment_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.markswoman.eyestalk.model.uiobject.DynamicImageView
                android:id="@+id/menu_button_product_matching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description"
                android:src="@drawable/product_matching_menu_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center_horizontal"
            android:weightSum="2" >

            <com.markswoman.eyestalk.model.uiobject.DynamicImageView
                android:id="@+id/menu_button_tips_and_tricks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/tips_and_tricks_menu_button" />

            <com.markswoman.eyestalk.model.uiobject.DynamicImageView
                android:id="@+id/menu_button_our_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/our_collection_menu_button" />
        </LinearLayout>

        <com.markswoman.eyestalk.model.uiobject.DynamicImageView
            android:id="@+id/menu_button_lens_comparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lens_comparison_menu_button" />
    </LinearLayout>

</ScrollView>