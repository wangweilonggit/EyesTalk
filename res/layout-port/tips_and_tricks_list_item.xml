<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_normal" >

    <TextView
        android:id="@+id/textview_tips_and_tricks_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@drawable/tips_and_tricks_item_textcolor"
        android:textSize="@dimen/text_size_big_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_tips_and_tricks_title"
        android:layout_marginTop="@dimen/margin_pre_normal"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables" >

        <com.markswoman.eyestalk.model.uiobject.DynamicImageView
            android:id="@+id/imageview_tips_and_tricks_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tips_and_tricks_item_thumbnail_height"
            android:layout_marginTop="@dimen/margin_small"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description" />

        <TextView
            android:id="@+id/textview_tips_and_tricks_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:lines="6"
            android:singleLine="false"
            android:textColor="@color/gray_color_1"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

</RelativeLayout>